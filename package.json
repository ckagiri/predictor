{
  "name": "predictor",
  "version": "1.0.0",
  "description": "Predictor",
  "main": "index.js",
  "scripts": {
    "postinstall": "cd backend && npm install",
    "prebuild": "npm run build:clean",
    "build": "npm run build:frontend && npm run build:backend",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:dev": "npm run build:frontend:dev && npm run build:backend",
    "build:frontend:dev": "cd frontend && npm run build:dev",
    "build:clean": "rimraf ./dist && rimraf ./backend/build",
    "start": "cd backend && npm run start",
    "start:production": "npm run build && npm run start",
    "start:dev": "cd backend && npm run start:dev",
    "start:development": "npm run build:dev && npm run start:dev",
    "development": "nodemon",
    "compile:start": "concurrently \"npm run compile\" \"npm run start:dev\"",
    "cs": "npm run compile:start",
    "debug": "nodemon -r dotenv-flow/config --inspect=9229 backend/build/api/server.js --node-env=development",
    "test": "TS_NODE_PROJECT='backend/tsconfig.json' mocha --require ts-node/register --require dotenv-flow/config  backend/__tests__/**/*.spec.ts --node-env=test",
    "prettify": "prettier --write \"**/*.ts\"",
    "lb": "cd backend && npm run lint",
    "lfb": "cd backend && npm run lint:fix",
    "tb": "cd backend && npm run typecheck",
    "dst": "cd backend && npm run drop:test && npm run seed:test",
    "dsit": "cd backend && npm run drop:test && npm run seed:test && npm run import:test"
  },
  "lint-staged": {
    "*.ts": "lfb"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lfb"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ckagiri/predictor.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ckagiri/predictor/issues"
  },
  "homepage": "https://github.com/ckagiri/predictor#readme",
  "dependencies": {},
  "devDependencies": {
    "concurrently": "^5.1.0",
    "dotenv": "^7.0.0",
    "dotenv-flow": "^3.1.0",
    "prettier": "^1.16.4",
    "rimraf": "^3.0.2"
  },
  "engines": {
    "node": "12.16"
  }
}