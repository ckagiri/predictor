{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "build",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2020"],
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true
  },
  "exclude": ["__tests__"]
}
