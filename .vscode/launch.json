{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch Chrome",
      "url": "http://localhost:3080",
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}",
      //"trace": "verbose",
      //"preLaunchTask": "start_server_task"
      "sourceMapPathOverrides": {
        "webpack:///./*": "${webRoot}/*"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Server",
      "program": "${workspaceFolder}/backend/app/index.ts",
      "cwd": "${workspaceFolder}/backend",
      "envFile": "${workspaceFolder}/backend/.env.development",
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "NODE_ENV": "development"
      },
      "outFiles": [
        "${workspaceFolder}/backend/build/app/index.js"
      ],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Server(ts-node)",
      "runtimeArgs": [
        "-r",
        "ts-node/register",
        "-r",
        "tsconfig-paths/register",
      ],
      "cwd": "${workspaceFolder}/backend",
      "args": [
        "${workspaceFolder}/backend/app/index.ts",
      ],
      "envFile": "${workspaceFolder}/backend/.env.development",
      "env": {
        "NODE_ENV": "development",
        "TS_NODE_PROJECT": "${workspaceFolder}/backend/tsconfig.json"
      },
    },
    {
      "name": "Current Mocha File",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/node_modules/mocha/bin/_mocha",
      "args": [
        "-r",
        "ts-node/register",
        "--require",
        "dotenv-flow/config",
        "--timeout",
        "9999",
        "${file}",
        "--node-env=test"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "NODE_ENV": "test",
        "TS_NODE_PROJECT": "${workspaceFolder}/backend/tsconfig.json"
      },
      "cwd": "${workspaceFolder}/backend",
      "skipFiles": [
        "<node_internals>/**"
      ],
      "outFiles": [
        "${workspaceFolder}/backend/**/*.js",
        "!**/node_modules/**"
      ],
      "trace": true,
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Import AFD",
      "program": "${workspaceFolder}/backend/import/start.ts",
      "preLaunchTask": "tsc: build - backend/tsconfig-debug.json",
      "envFile": "${workspaceFolder}/backend/.env.test",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "test"
      },
      "outFiles": [
        "${workspaceFolder}/backend/debug/import/start.js"
      ],
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Scheduler",
      "program": "${workspaceFolder}/backend/scheduler.ts",
      "preLaunchTask": "tsc: build - backend/tsconfig.json",
      "envFile": "${workspaceFolder}/backend/.env.test",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "test"
      },
      "outFiles": [
        "${workspaceFolder}/backend/debug/scheduler.js"
      ],
      "sourceMaps": true
    },
    {
      "name": "Current ts File",
      "type": "node",
      "request": "launch",
      "args": ["${relativeFile}"],
      "runtimeArgs": [
        "-r",
        "ts-node/register",
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "NODE_ENV": "test",
      },
      "cwd": "${workspaceRoot}",
      "skipFiles": [
        "<node_internals>/**"
      ],
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Node: Nodemon",
      "processId": "${command:PickProcess}",
      "restart": true,
    }
  ]
}