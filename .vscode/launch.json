{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Server",
      "program": "${workspaceFolder}/backend/server/index.ts",
      "cwd": "${workspaceFolder}",
      "outFiles": [
        "${workspaceFolder}/backend/server/index.js"
      ],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Node Express via NPM",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run-script",
        "node:debug"
      ],
      "port": 9229
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Import AFD",
      "program": "${workspaceFolder}/backend/import/start.ts",
      "preLaunchTask": "tsc: build - backend/tsconfig-debug.json",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "test"
      },
      "outFiles": [
        "${workspaceFolder}/backend/debug/import/start.js"
      ],
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Help out",
      "program": "${workspaceFolder}/src/helpers/test.ts",
      "cwd": "${workspaceFolder}",
      "outFiles": [
        "${workspaceFolder}/src/helpers/test.js"
      ],
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Node: Nodemon",
      "processId": "${command:PickProcess}",
      "restart": true,
      "protocol": "inspector"
    }
  ]
}