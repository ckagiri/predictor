  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Server",
      "program": "${workspaceFolder}/src/server/index.ts",
      "cwd": "${workspaceFolder}",
      "outFiles": [
        "${workspaceFolder}/src/server/index.js"
      ],
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Import AFD",
      "program": "${workspaceFolder}/src/import/start.ts",
      "preLaunchTask": "tsc: build - tsconfig-debug.json",
      "cwd": "${workspaceFolder}",
      "env": {
        "NODE_ENV": "test"
      },
      "outFiles": [
        "${workspaceFolder}/debug/import/start.js"
      ],
      "sourceMaps": true
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Help out",
      "program": "${workspaceFolder}/src/helpers/test.ts",
      "cwd": "${workspaceFolder}",
      "outFiles": [
        "${workspaceFolder}/src/helpers/test.js"
      ],
      "sourceMaps": true
    },
  ]
}